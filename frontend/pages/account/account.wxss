/*本页面css属性*/
page{
  background-color: rgb(241, 241, 241);
}
.header {
  padding-top: 10px;
  margin-bottom: 10px;
  height: 120px;
  padding-bottom: 5px;
  width: 100%;
  background: url('https://take-out.oss-cn-hangzhou.aliyuncs.com/%E8%B4%A6%E6%88%B7%E8%83%8C%E6%99%AF.png')
}
.header1 {
  padding-top: 10px;
  margin-bottom: 10px;
  height: 220px;
  padding-bottom: 5px;
  width: 100%;
  background: url('https://take-out.oss-cn-hangzhou.aliyuncs.com/%E8%B4%A6%E6%88%B7%E8%83%8C%E6%99%AF.png')
