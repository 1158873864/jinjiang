<!--index.wxml-->
<import src='/template/findBar/searchBar.wxml'></import>
<import src='/template/adBar/adBar.wxml'></import>
<import src='/template/likeIcon/likeIcon.wxml'></import>

<view class="container container--color-white">
  <view class='headWrapper' style='background-color:black; background-size: cover;background-repeat: no-repeat; background-position: bottom'>
    <!--搜索框-->
    <view>
      <template class='search' is='searchBar' data='{{placeholder: "搜搜你感兴趣的内容吧~", searchCondition: searchCondition,onSearch:onSearch}}'></template>
    </view>
  </view>
  <!--广告位-->
  <!-- <template class='ad' is='adBar' data='{{ad}}'></template> -->


  <view class='banner'  bindtap='onAd'>
    <image class='banner_img' mode='widthFix' src='{{ad1}}'></image>
  </view>

  <!--内容  -->
  <view class='box-tll'>
    <view class='box'>
      <view class='conten' wx:for-items="{{array}}" wx:key="id">
        <view class='diteall' catchtap="catchTapCategory" open-type="switchTab" data-goodsid="{{item.id}}">
          <view>
            <view class='conten-image'>
              <view class='conten-text'>
                <image src='{{item.src}}' class='img'></image>
              </view>
            </view>
          </view>
          <text class='txt'>{{item.text}}</text>
        </view>
      </view>
    </view>
  </view>

  <view class='banner2'  bindtap='onAd'>
    <image class='banner_img' mode='widthFix' src='{{ad2}}'></image>
  </view>
  
  <view class="title">
    <image class='title_img' src='../../img/热销产品title.png'></image>
    <image class='title_img2' src='../../img/more.png' bindtap="toGoods"></image>
  </view>

  <view class="hot">
     <view class="hot_item" bindtap="onTouchThisArticle" data-kind='goodsDetail' data-id='{{item.id}}'>
         <image class='banner_img' mode='widthFix' src='../../img/hot1.jpg'></image>
         <view class="black_txt">金酱2016陈酿酒</view>
         <view class="black_txt">500ml*瓶</view>
         <view class="red_txt">¥668.00</view>
     </view>
     <view class="hot_item">
         <image class='banner_img' mode='widthFix' src='../../img/hot1.jpg'></image>
         <view class="black_txt">金酱2016陈酿酒</view>
         <view class="black_txt">500ml*瓶</view>
         <view class="red_txt">¥668.00</view>
     </view>
     <view class="hot_item">
         <image class='banner_img' mode='widthFix' src='../../img/hot1.jpg'></image>
         <view class="black_txt">金酱2016陈酿酒</view>
         <view class="black_txt">500ml*瓶</view>
         <view class="red_txt">¥668.00</view>
     </view>
  </view>
  
  <view class='banner2'  bindtap='onAd'>
    <image class='banner_img' mode='widthFix' src='{{ad3}}'></image>
  </view>

<view class="title">
    <image class='title_img' src='../../img/精品推荐-title.png'></image>
    <image class='title_img2' src='../../img/more.png' bindtap="toRecommend"></image>
  </view>

<view class='recommend'  wx:for="{{recommends}}" wx:key="id" wx:for-index="index">
  <view class="recommend">
     <view class="recommend_item" bindtap="onTouchThisArticle" data-kind='goodsDetail' data-id='{{item.id}}'>
        <image class='recommend_image' mode='widthFix' src='../../img/r1.jpg'></image>
        <view class="recommend_right">
            <view class="black_txt1">金酱2016陈酿酒               </view>
            <view class="black_txt1">500ml*瓶</view>
            <view class="recommend_bottom"> 
                <view class="red_txt">¥668.00</view>
                <view class="sale">777件已售</view>
            </view>
     </view>
    </view>
    </view>
  </view>



<view class="title">
    <image class='title_img' src='../../img/积分商城-title.png'></image>
    <image class='title_img2' src='../../img/more.png' bindtap="toIntegral"></image>
  </view>

<view class="gridview" style='background:white;'>
  <view class="gridview-item" wx:for="{{integrals}}" wx:key="id" wx:for-index="index">
    <view bindtap="onTouchThisArticle" data-kind='integralDetail' data-id='{{item.id}}'>
       <image class='integral_image' mode='widthFix' src='../../img/integral.jpg'></image>
       <view class="black_txt2">金酱2016陈酿酒               </view>
            <view class="black_txt2">500ml*瓶</view>
        <view class="integral_convert">
           <image class='integral_convert_image' src='../../img/金币.png'></image>
            <view class="orange_txt">兑换积分:668</view>
            
        </view>
        <image class='integral_button' src='../../img/rightnow.png'></image>
  </view>
</view>
</view>



