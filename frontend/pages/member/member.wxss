/* 本页面的样式 */

.container {
  background-color: white;
}

.card__left {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px #ffffff solid;
  box-shadow: 0 0 25px #c4a966;
}

.headWrapper {
  width: 100%;
  background-color: rgb(242, 197, 72);
}

.search {
  /* background-color: rgb(200, 165, 65); */
  width: 95%;
  margin: 0 auto;
  margin-top: 5px;
  margin-bottom: 5px;
}


.box {
  width: 95%;
  margin: 0 auto;
  background-color: white;
  padding-top: 10px;
  padding-bottom: 15px;
  /* border-radius: 10px; */
  margin-top: 15px;
  box-shadow: 0px 15px 30px rgba(0,0,0,0.1);
}

.vessel {
  width: 93%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.img {
  width: 120px;
  height: 100px;
  border-radius: 5px;
}

.img_bofang {
  height: 100%;
  width: 100%;
  border-radius: 5px;
}
.right {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 10px;
}

.title {
  font-size: 18px;
  color: rgb(54, 54, 54);
}
.shoping{
  /* border: 1px solid red; */
  margin-left: 10rem;
  margin-top: 0.5rem;
  font-size: 17px;
}

.money {
  font-size: 12px;
  color: black;
  font-weight:800;
  text-align: center;
}

.img_cart {
   font-size: 17px;
    color:  rgb(54, 54, 54);
