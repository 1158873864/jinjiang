.articleListWrapper_view {
  margin-top: -3%;
  width: 100%;
  padding: 5px 10px;
}
.swiper-box{ 
    display: flex; 
    width: 100%; 
    height: 100%; 
    /* margin-top: 40rpx;  */
    overflow: hidden;
} 
.swiper-items{
 
  height: 100%;
} 
.scroll-views{
  height: 100%;

}


.orders-switch {
  width: 100%;
  background: #fff;
  height: 84rpx;
  /* border-bottom: 1px solid rgba(0,0,0,.15); */
}

.orders-switch .item {
  display: inline-block;
  height: 82rpx;
  width: 48%;
  padding: 0 15rpx;
  text-align: center;
}

.orders-switch .item .txt {
  display: inline-block;
  height: 82rpx;
  padding: 0 20rpx;
  line-height: 82rpx;
  color: #9a9ba1;
  font-size: 30rpx;
  width: 170rpx;
}

.orders-switch .item.active .txt {
  color: #ab956d;
  border-bottom: 4rpx solid #ab956d;
}
