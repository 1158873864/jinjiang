/* pages/modifyMyCard/modifyMyCard.wxss */
@import '/style/common.wxss';

/*本页面css属性*/

page {
  background-color: #efefef;
}

/*关于人物头像的属性*/

.face {
  margin: 10px 0 0 0;
}

.face image {
  width: 100px;
  height: 100px;
}

.face-text {
  text-align: center;
  margin: 10px 0;
  font-size: 0.8rem;
}

/*关于修改个人信息的属性*/

.infos {
  background-color: white;
  padding: 10px;
  font-size: 0.8rem;
}

.info {
  width: 96%;
  margin-left: 2%;
  border-bottom-color: rgb(229, 229, 229);
  border-bottom-style: solid;
  border-bottom-width: 1px;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  padding: 10px;
}

.info__key {
  font-size: 0.8rem;
  color: black;
  width: 25%;
  padding-top: 5px;
}

.info__value {
  font-size: 0.8rem;
  width: 100%;
  text-align: right;
  color: rgb(150, 150, 150);
}

.arrow {
  margin-top: 8px;
  height: 14px;
  width: 24px;
}

.info__textarea {
  min-height: 100px;
}

/*关于保存按钮的属性*/

.save-btn {
  margin: 40px 0 200px 0;
  width: 90%;
}

/**
tag
**/

.container {
  /* display: inline-block; */
}

.container> .tag-wrapper {
  display: inline-block;
  /* flex-direction: row; */
}

.container .tag-item-wrapper {
  /* display: flex;
  flex-direction: row; */
  display: inline-block;
  margin: 10rpx 0 0rpx 18rpx;
}

.container .tag-item {
  padding: 5rpx 25rpx;
  font-size: 24rpx;
  width: 100%;
}

.container .tag-item-selected {
  padding: 5rpx 25rpx;
  font-size: 24rpx;
}

.container>.tag-wrapper>.tag-item-wrapper>.tag-item {
  border: 1rpx solid #c09b54;
  border-radius: 40rpx;
  width: 100%;
}

.container>.tag-wrapper>.tag-item-wrapper>.tag-item-selected {
  background: #c09b54;
  color: #fff;
  border-radius: 40rpx;
}


.infoCard {
  width: 96%;
  margin-left: 2%;
  border-bottom-color: rgb(230, 230, 230);
  border-bottom-style: solid;
  border-bottom-width: 1px;
  padding: 10px;
}

.uploadButton {
  font-size: 0.8rem;
  float: right;
  color: rgb(150, 150, 150);
}

.uploadButtonPic{
  display: block;
  width:14px;
  height:14px;
  float:right;
  margin-top:2px;
  padding-left:3px;
}

.bussinessCard{
  display: block;
  width:100%;
  margin-top:10px;
}


.article {
  position: relative;
  width: 100%;
  height: 8%;
  /* background-color: rgb(33, 33, 33); */
  background-color: #fff;
  border-radius: 5px;
  padding: 10px 10px;
  margin: 10px 0 0 0;
  box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
}

.article2 {
  position: relative;
  width: 90%;
  height: 10%;
  /* background-color: rgb(33, 33, 33); */
  background-color: #fff;
  border-radius: 5px;
  padding: 10px 10px;
  margin: 20px 0 20px 0;
  box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
}

.article__decorator {
  position: absolute;
  display: flex;
  align-items: center;
  top: -10px;
  width: 50%;
  height: 20px;
  /* background-color: #edc681; */
  border-radius: 20px;
  padding: 5px 10px;
  box-shadow: 0 0 10px #a0a0a0;
  left: -30%;
}

.article__kindName {
  font-size: 0.8rem;
  color: #927912;
  font-weight: bold;
  margin-left: auto;
}

.article__image {
  width: 100px;
  height: 100px;
  margin: 2px;
  /* display: flex;
  flex-direction: row;
  flex-wrap:wrap; */
}

.article__content {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  width: 80%;
  font-size: 0.7rem;
  font-weight: 500;
  /* color: #fff; */
  color: black;
  margin: 5px 0 10px 0;
  display: -webkit-box;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  word-wrap: break-word;
  white-space: normal !important;
  
  -webkit-box-orient: vertical;
}

/* 控制展开或收起 */
.expand{
  -webkit-line-clamp: 0;   /* 行数限制，0表示不限制*/
}
.narrow{
  -webkit-line-clamp: 5;
}

.expandButton{
  display:block;
  color: rgb(33, 81, 172);
  font-size: 0.7rem;
  font-weight: 500;
  margin: -5px 0 10px 0;
}

.article__bottom {
  width: 100%;
  margin: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.5rem;
}

.like {
  display: flex;
  float: right;
}

.like__num {
  margin: 5px 0 0 5px;
}

.like__image {
  width: 15px;
  height: 15px;
}

/*关于文章作者的属性*/

.writer {
  display: flex;
  flex-direction: column;
  /* align-items: center;
  padding: 5px 0 0 0; */
}

.article_text {
  height: auto;
  width: auto;
  padding-right: 5px;
  display: flex;
  flex-direction: column;
  font-size: 40px;
}

.writer__face {
  width: 35px;
  height: 35px;
  margin: 0 5px;
  border-radius: 50%;
}

.writer__name {
  color: #f1c65e;
  font-weight: 500;
  font-size: 0.8rem;
}

.article_row {
  display: flex;
  flex-direction: row;
}

.article__imageList {
  width: 100%;
}

.level {
  width: 20px;
  margin-left: 25%;
  margin-top: 10%;
}

.title {
  /* font-weight: bolder; */
  color: #f65e;
  font-size: 12px;
  margin-top: 10px;
  padding-bottom: 10px;
  width: 80%;
  border-bottom: 1px solid #f1c65e;
}

.name_width {
  width: 45px;
  height: 25px;
  overflow: hidden;
}

.start_left {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  width: 6rem;
  height: 1.5rem;
  /* color: #fff; */
  margin: 0.5rem 0 0 0.5rem;
  display: -webkit-box;
  overflow: hidden;
}

.start_right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 1.5rem;
  height: 0.7rem;
  /* color: #fff; */
  margin: 0.7rem 0.5rem 0px 0;
  padding-left: 2rem;
  display: -webkit-box;
  overflow: hidden;
}

.start_middle {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  width: 60%;
  font-size: 1rem;
  font-weight: 500;
  /* color: #fff; */
  color: black;
  margin: 0.5rem 0 0 1rem;
  display: -webkit-box;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  word-wrap: break-word;
  white-space: normal !important;
  
  -webkit-box-orient: vertical;
}

.banner1{
  padding-top: 10px;
  width: 95%;
  margin: 0 auto;
  height: 180px;
}

.banner_img1{
  width: 100%;
  height: 180px;
}
